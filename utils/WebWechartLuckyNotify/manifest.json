{
    "manifest_version": 2,
    "name": "Wechart-Notify",
    "description": "微信红包消息通知",
    "version": "0.0.1",

    "permissions": [
        "tabs",
        "https://wx.qq.com/*"
    ],

    "browser_action": {
        "default_icon": "content/icons/wechart.png",
        "default_title": "微信红包消息"
    },

    "content_scripts": [{
        "matches": ["https://wx.qq.com/*"],
        "js": ["js/jquery.js", "js/content.js"]
    }]
}
